.custom-block
  &.details
    display block
    position relative
    border-radius 2px
    margin 1em 0
    padding 1rem
    background-color #eee
    h4
      margin-top 0
    figure, p
      &:last-child
        margin-bottom 0
        padding-bottom 0
    summary
      outline none
      cursor pointer
  &.theorem
    margin 1rem 0
    padding .1rem 1.5rem
    border-radius 0.4rem
    background-color #f0f4f8
    .title
      font-weight bold
  &.right
    color transparentify($textColor, 0.4)
    font-size 0.9rem
    text-align right